{% extends 'layout/base.twig' %}

{% block title %}Article
{% endblock %}

{% block content %}
	<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-lg p-8">

      <a href="/home" class="text-blue-500 hover:underline">Back to Articles</a>
		<h1 class="text-4xl font-bold">{{ article['title'] }}</h1>

      <p class="text-gray-600 mt-2">{{ article['date'] | date("F d, Y") }}</p>
      <div class="mt-4 text-lg text-gray-800">
         {{ article['content'] | raw }}
      </div>      
		
	</div>
{% endblock %}
